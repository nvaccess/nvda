Import(
	"env",
	"sourceDir",
	"localLib",
)


# Ignoring Flake8 F821: 'undefined name' due to nonstandard SCons import
env = env.Clone()  # noqa: F821

localWin10Lib = env.SharedLibrary(
	target="nvdaHelperLocalWin10",
	source=[
		env["projectResFile"],
		"oneCoreSpeech.cpp",
		"uwpOcr.cpp",
	],
	LIBS=[
		"WindowsApp",
		# Ignoring Flake8 F821: 'undefined name' due to nonstandard SCons import
		localLib[2],
	],  # noqa: F821
)

Return(["localWin10Lib"])
