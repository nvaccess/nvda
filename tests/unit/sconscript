import sys

Import("env")

cmd = [sys.executable, "-m", "unittest"]
tests = env.get("unitTests")
if tests:
	# Run specific tests.
	tests = tests.split(",")
	cmd += ["tests.unit." + test for test in tests]
else:
	# Run all tests.
	cmd.extend(("discover", "tests.unit", "-t", "."))
target = env.Command(".", None, [cmd])
Return('target')
