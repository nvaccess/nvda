import typing
if typing.TYPE_CHECKING:
	import SCons
	from SCons import(
		Dir,
		Import,
	)

sourceDir: "SCons.Node.FS.Dir"
env: "SCons.Environment.Base"
Import(
	'env',
	'sourceDir',
)

targetCldrDir = sourceDir.Dir('locale')
cldrDataSource = Dir("include/nvda-cldr/locale")

env.RecursiveInstall(
	targetCldrDir,
	cldrDataSource.abspath
)
